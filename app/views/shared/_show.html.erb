<div class="postTitle">
  <%= @post.title %>
</div>
<div class="postDate">
  <%= @post.created_at.to_s(:datetime_jp) %>
</div>
<div class="postAuthor">
  <%# <%= link_to current_user.nickname, user_path(current_user) %> 
  <%= link_to post.user.nickname, user_path(post.user),class: "Author_url" %>
</div>
<% if user_signed_in? && current_user.id == @post.user_id %>
  <div class="postManage">
    <%= link_to "編集", edit_post_path(@post.id), class: "postManage__edit" %>
    <%= link_to "削除", post_path(@post.id), method: :delete, class: "postManage__delete" %>
  </div>
<% end %>
<div class="postText">
  <%= simple_format @post.content %>
</div>
<div class="postimage">
  <%= @post.image %>
</div>
